<script type="text/javascript">
var names=new Array("夫妻肺片","香肠泡饭","串串","冷锅鱼","牛肉面","排骨面","猪肝面","西湖醋鱼","东坡肉","宋嫂鱼","莼菜汤","蟹黄小笼包","龙抄手","酸辣土豆丝"); 
