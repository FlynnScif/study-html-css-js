    var index = Math.floor(Math.random()*names.length); 
    var name = names[index]; 
    document.getElementById("showView").innerHTML = name; 
    idd=setTimeout("showName()",50); 
} 
var state = true; 
var idd; 
function sssss(){ 
    if(state){ 
        showName(); 
        state = false; 
    } 
    else{ 
        clearTimeout(idd); 
        state = true; 
    } 
         
